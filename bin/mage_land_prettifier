#!/usr/bin/env ruby

require "pathname"

class MageLandPrettyfier
  def initialize(source)
    @lines = source.readlines
  end

  def overrides
    unless @overrides
      @overrides = {}
      (Pathname(__dir__) + "../data/xmage_cards.txt").readlines.each do |line|
        set_code, name, number = line.chomp.split("\t", 3)
        if set_code == "exp" or ["Plains", "Island", "Swamp", "Mountain", "Forest"].include?(name)
          @overrides[name] = "#{set_code.upcase}:#{number}"
        end
      end
    end
    @overrides
  end

  def prettify_line(line)
    line.gsub(/\[.*?\] (.*?)(?=[\r\n])/) do
      if overrides[$1]
        "[#{overrides[$1]}] #{$1}"
      else
        $&
      end
    end
  end

  def run!
    @lines.map{|line| prettify_line(line)}.join
  end
end

case ARGV.size
when 0
  puts MageLandPrettyfier.new(STDIN).run!
when 1
  file_in = Pathname(ARGV[0]).open
  puts MageLandPrettyfier.new(file_in).run!
when 2
  if ARGV[0] == "-i"
    file_in  = Pathname(ARGV[1]).open
    output = MageLandPrettyfier.new(file_in).run!
    Pathname(ARGV[1]).write(output)
  else
    file_in  = Pathname(ARGV[0]).open
    output = MageLandPrettyfier.new(file_in).run!
    Pathname(ARGV[1]).write(output)
  end
else
  STDERR.puts "Usage: #{$0} [file.dck]"
  STDERR.puts "It will read from STDIN if no argument is passed"
end
